<%= simple_form_for(@vaga) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, label: 'Título da Vaga', placeholder: 'Ex: Desenvolvedor Ruby on Rails Pleno' %>
    <%= f.input :description, as: :rich_text_area, label: 'Descrição Detalhada da Vaga' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar Vaga', class: 'btn-primary' %>
  </div>
<% end %>
